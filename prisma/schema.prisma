generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  GUEST
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id        String   @id
  firstName String
  lastName  String
  username  String?
  email     String   @unique
  imageUrl  String
  phone     String?
  role      ROLE     @default(GUEST)
  createdAt DateTime
  updatedAt DateTime
}
